<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.CardWise.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.CardWise.AppWidgetContainer">

    <TextView
        android:id="@+id/appwidget_text"
        style="@style/Widget.CardWise.AppWidget.InnerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="@color/lightest_brown"
        android:background="@color/dark_brown"
        android:contentDescription="@string/appwidget_text"
        android:text="@string/streak_0"
        android:textSize="24sp"
        android:textStyle="bold|italic" />
</LinearLayout>